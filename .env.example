
FLASK_ENV=development
FLASK_APP=app.py

FLASK_HOST=0.0.0.0
FLASK_PORT=5000

SECRET_KEY=your-secret-key-here-change-this


FIREBASE_PROJECT_ID=your-project-id

# ملف خدمة Firebase (ضع مسار الملف)
FIREBASE_CONFIG_PATH=./serviceAccountKey.json

# ============================================
# إعدادات البريد الإلكتروني (اختياري)
# ============================================

MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password
MAIL_DEFAULT_SENDER=noreply@students-system.com

# ============================================
# إعدادات قاعدة البيانات (Redis اختياري)
# ============================================

# لـ production - استخدم Redis للجلسات
REDIS_URL=redis://localhost:6379/0

# ============================================
# إعدادات الأمان
# ============================================

# تفعيل HTTPS في الإنتاج
PREFERRED_URL_SCHEME=http

# قائمة النطاقات المسموحة (CORS)
ALLOWED_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# ============================================
# إعدادات أخرى
# ============================================

# مسار التسجيل
LOG_LEVEL=INFO

# حجم الملف المرفوع
MAX_UPLOAD_SIZE=16777216
